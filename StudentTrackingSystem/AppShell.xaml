<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="StudentTrackingSystem.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:StudentTrackingSystem"
    xmlns:views="clr-namespace:StudentTrackingSystem.Views"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False"
    Title="StudentTrackingSystem">

    <ShellContent
        ContentTemplate="{DataTemplate views:LoginView}"
        Route="LoginView" />

    <ShellContent
        ContentTemplate="{DataTemplate views:ClassListView}"
        Route="ClassListView" />
</Shell>