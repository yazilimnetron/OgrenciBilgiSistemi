            <Border.Shadow>
                <Shadow Brush="#1ABC9C" Offset="0,4" Radius="15" Opacity="0.4" />
            </Border.Shadow>

            <Grid>
                <views:MainHeaderView x:Name="MyHeader"
                                      ShowBack="False"
                                      ShowProfile="True" />

                <VerticalStackLayout Spacing="2"
                                     VerticalOptions="End"
                                     Margin="20,0,20,35">
                    <Label x:Name="WelcomeLabel"
                           Text="Merhaba"
                           FontSize="18"
                           FontFamily="OpenSansSemibold"
                           TextColor="White" />
                    <Label Text="SÄ±nÄ±f SeÃ§iniz"
                           FontSize="14"
                           FontFamily="OpenSansSemibold"
                           TextColor="White" />
                </VerticalStackLayout>
            </Grid>
        </Border>

        <Border Grid.Row="1"
                Margin="15,-28,15,10"
                HeightRequest="55"
                StrokeShape="RoundRectangle 28"
                StrokeThickness="0"
                BackgroundColor="White">
            <Border.Shadow>
                <Shadow Brush="Black" Offset="0,10" Radius="20" Opacity="0.08" />
            </Border.Shadow>
            <Grid ColumnDefinitions="55, *">
                <Label Grid.Column="0" Text="ðŸ”" VerticalOptions="Center" HorizontalOptions="Center" FontSize="18" TextColor="#95A5A6" />
