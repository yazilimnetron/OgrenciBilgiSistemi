            </Grid>
        </Border>

        <CollectionView x:Name="ClassCollection" Grid.Row="2" Margin="15,0" SelectionMode="None">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" ItemSpacing="10" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border StrokeShape="RoundRectangle 15" StrokeThickness="0" BackgroundColor="White" Padding="0">
                        <Border.Shadow>
                            <Shadow Brush="Black" Offset="0,2" Radius="5" Opacity="0.05" />
                        </Border.Shadow>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnClassFrameTapped" CommandParameter="{Binding .}" />
                        </Border.GestureRecognizers>
                        <Grid ColumnDefinitions="8, *, Auto">
                            <BoxView Grid.Column="0" BackgroundColor="#1ABC9C" WidthRequest="8" HorizontalOptions="Start"/>
                            <HorizontalStackLayout Grid.Column="1" Spacing="15" Padding="15,12">
                                <Image Source="classroom.png" WidthRequest="30" HeightRequest="30" VerticalOptions="Center" />
                                <VerticalStackLayout VerticalOptions="Center">
                                    <Label Text="{Binding Name}" FontSize="16" FontFamily="OpenSansSemibold" TextColor="#2C3E50" />
                                    <Label Text="{Binding StudentCount, StringFormat='SÄ±nÄ±f Mevcudu: {0}'}" FontSize="11" TextColor="#1ABC9C" />
                                </VerticalStackLayout>
                            </HorizontalStackLayout>
                            <Label Grid.Column="2" Text="â†’" FontSize="24" TextColor="#1ABC9C" VerticalOptions="Center" Margin="0,0,15,0" />
                        </Grid>
                    </Border>
                </DataTemplate>
