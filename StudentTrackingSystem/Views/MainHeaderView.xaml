<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudentTrackingSystem.Views.MainHeaderView"
             x:Name="this">

    <Grid HeightRequest="90" 
          VerticalOptions="Start" 
          Padding="15,35,15,0" 
          ColumnDefinitions="50, *, 50"
          BackgroundColor="Transparent">

        <Label x:Name="BackBtn"
               Grid.Column="0"
               Text="â†"
               FontSize="28"
               FontAttributes="Bold"
               TextColor="White"
               VerticalOptions="Center"
               HorizontalOptions="Start"
               IsVisible="{Binding ShowBack, Source={x:Reference this}}">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnBackClicked" />
            </Label.GestureRecognizers>
        </Label>

        <Border x:Name="ProfileBtn"
                Grid.Column="2"
                HeightRequest="40"
                WidthRequest="40"
                StrokeShape="RoundRectangle 20"
                BackgroundColor="White"
                HorizontalOptions="End"
                VerticalOptions="Center"
                StrokeThickness="0"
                IsVisible="{Binding ShowProfile, Source={x:Reference this}}">
            <Border.Shadow>
                <Shadow Brush="Black" Offset="0,2" Radius="3" Opacity="0.15" />
            </Border.Shadow>

            <Label x:Name="InitialLabel"
                   Text="{Binding UserInitial, Source={x:Reference this}}"
                   TextColor="#1ABC9C"
                   FontSize="16"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />

            <Border.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnProfileClicked" />
            </Border.GestureRecognizers>
        </Border>
    </Grid>
</ContentView>